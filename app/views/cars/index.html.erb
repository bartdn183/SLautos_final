<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Doors</th>
      <th>Ext color</th>
      <th>Int color</th>
      <th>Year</th>
      <th>Owners</th>
      <th>Transmission</th>
      <th>Fuel</th>
      <th>Description</th>
      <th>Hp</th>
      <th>Engine</th>
      <th>Price</th>
      <th>Total km</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make_id %></td>
        <td><%= car.doors %></td>
        <td><%= car.ext_color %></td>
        <td><%= car.int_color %></td>
        <td><%= car.year %></td>
        <td><%= car.owners %></td>
        <td><%= car.transmission %></td>
        <td><%= car.fuel %></td>
        <td><%= car.description %></td>
        <td><%= car.hp %></td>
        <td><%= car.engine %></td>
        <td><%= car.price %></td>
        <td><%= car.total_km %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

